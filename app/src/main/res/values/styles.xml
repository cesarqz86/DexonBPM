<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>


    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/menubar_background</item>
        <item name="android:color">@color/white</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>


    <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textfield_style_1">
        <item name="android:background">@drawable/txt_border_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="buttons_style_1">
        <item name="android:background">@drawable/blue_btn_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttons_style_technician_left">
        <item name="android:background">@drawable/technician_btn_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_technician_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttons_style_technician_middle">
        <item name="android:background">@drawable/technician_btn_style2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_technician_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttons_style_technician_right">
        <item name="android:background">@drawable/technician_btn_style3</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_technician_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttons_style_technician_radio">
        <item name="android:textColor">@drawable/technician_btn_style4</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="header_row_style">
        <item name="android:background">@drawable/row_white_header_style</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:width">140dp</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:layout_marginBottom">1dip</item>
        <item name="android:layout_marginRight">1dip</item>-->
    </style>

    <style name="row_style_even">
        <item name="android:background">@drawable/row_white_style</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:maxLines">1</item>
        <item name="android:width">140dp</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:layout_marginBottom">1dip</item>
        <item name="android:layout_marginRight">1dip</item>-->
    </style>

    <style name="row_style_odd">
        <item name="android:background">@drawable/row_gray_style</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:maxLines">1</item>
        <item name="android:width">140dp</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:layout_marginBottom">1dip</item>
        <item name="android:layout_marginRight">1dip</item>-->
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/pager_selected</item>
        <item name="pageColor">@color/pager_not_selected</item>
        <item name="android:background">@color/white</item>
        <item name="centered">true</item>
    </style>

</resources>
